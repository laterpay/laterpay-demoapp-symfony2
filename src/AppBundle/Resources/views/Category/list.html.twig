{% if categories | length %}
    <div class="category-list">
        Categories:
        {% for category in categories %}
            <a href="{{ path('app_posts', { 'category_id' : category.id }) }}">{{ category.name }} ({{ category.publishedPosts.count }})<a>
            {% if not loop.last %}&nbsp;|&nbsp;{% endif %}
        {% endfor %}
    </div>
    <hr />
{% endif %}
